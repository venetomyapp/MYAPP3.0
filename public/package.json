{
  "name": "myapp",
  "version": "4.1.0",
  "description": "MyApp v4.1 - Piattaforma digitale moderna per gestione utenti con Supabase",
  "type": "module",
  "main": "index.html",
  "homepage": "https://myapp31.vercel.app",
  "scripts": {
    "dev": "concurrently \"npm:dev:css\" \"npm:serve\"",
    "dev:css": "tailwindcss -i ./src/input.css -o ./styles.css --watch",
    "serve": "http-server . -p 3000 -c-1 --cors",
    "start": "npm run dev",
    "build": "npm run build:css && npm run validate && echo 'MyApp v4.1 - Build completato'",
    "build:css": "tailwindcss -i ./src/input.css -o ./styles.css --minify",
    "preview": "npm run build && npm run serve",
    "deploy": "npm run build && git add . && git commit -m 'Deploy MyApp v4.1 update' && git push origin main",
    "test": "echo 'Testing MyApp v4.1 components...' && npm run validate",
    "validate": "echo 'Validating HTML files...' && find . -name '*.html' -exec echo 'Validating {}' \\;",
    "clean": "rm -rf dist/ .cache/ styles.css",
    "lint": "echo 'Linting files...'",
    "format": "echo 'Formatting files...'"
  },
  "keywords": [
    "webapp",
    "progressive-web-app",
    "supabase",
    "tailwindcss",
    "authentication",
    "dashboard",
    "responsive",
    "user-management",
    "notifications",
    "digital-card"
  ],
  "author": {
    "name": "MyApp Team",
    "email": "info@myapp.com",
    "url": "https://myapp31.vercel.app"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/venetomyapp/MYAPP4.0.git"
  },
  "bugs": {
    "url": "https://github.com/venetomyapp/MYAPP4.0/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14"
  }
}
