{
  "name": "myapp31",
  "version": "4.1.0",
  "description": "MyApp v4.1 - Piattaforma digitale moderna per gestione utenti con Supabase",
  "main": "index.html",
  "homepage": "https://myapp31.vercel.app",
  "scripts": {
    "dev": "concurrently \"npm:dev:css\" \"npm:serve\"",
    "dev:css": "tailwindcss -i ./src/input.css -o ./styles.css --watch",
    "serve": "http-server . -p 3000 -c-1",
    "start": "npm run dev",
    "build:css": "tailwindcss -i ./src/input.css -o ./styles.css --minify",
    "build": "npm run build:css && echo 'MyApp v4.1 - Build completato - App pronta per deploy'",
    "deploy": "git add . && git commit -m 'Deploy MyApp v4.1 update' && git push origin main",
    "test": "echo 'Testing MyApp v4.1 components...'",
    "validate": "echo 'Validating HTML files...' && ls *.html",
    "clean": "echo 'Cleaning temporary files...'",
    "prebuild": "npm run validate"
  },
  "engines": { "node": ">=18.0.0", "npm": ">=8.0.0" },
  "devDependencies": {
    "http-server": "^14.1.1",
    "tailwindcss": "^3.4.10",
    "postcss": "^8.4.41",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "webdav": "^5.3.1"
  },
  "browserslist": ["> 1%", "last 2 versions", "not dead", "not ie <= 11"]
}
