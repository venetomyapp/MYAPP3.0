{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/sync/auto-sync",
      "schedule": "0 6 * * *"
    }
  ],
  "functions": {
    "api/sync/process-documents.js": {
      "maxDuration": 300
    },
    "api/sync/discover-mega.js": {
      "maxDuration": 60
    },
    "api/sync/auto-sync.js": {
      "maxDuration": 600
    }
  }
}
