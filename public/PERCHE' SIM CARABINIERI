    <script>
        // ===== FLOATING CTA VISIBILITY =====
        const floatingCTA = document.querySelector('.floating-cta');
        let lastScrollY = window.scrollY;

        window.addEventListener('scroll', () => {
            if (window.scrollY > 1000) {
                floatingCTA.style.opacity = '1';
                floatingCTA.style.transform = 'translateY(0)';
            } else {
                floatingCTA.style.opacity = '0';
                floatingCTA.style.transform = 'translateY(100px)';
            }
        });

        // ===== ENHANCED HOVER EFFECTS =====
        document.querySelectorAll('.department-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-8px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // ===== CTA TRACKING =====
        document.querySelectorAll('a[href*="iscrizione"]').forEach(link => {
            link.addEventListener('click', function() {
                console.log('CTA clicked:', this.textContent);
            });
        });

        // ===== SMOOTH SCROLLING =====
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetSection = document.querySelector(targetId);
                if (targetSection) {
                    targetSection.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // ===== WATERMARK INTERACTION =====
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const rate = scrolled * -0.1;
            
            document.querySelector('.watermark-layer-1').style.transform = `rotate(-12deg) translateY(${rate}px)`;
            document.querySelector('.watermark-layer-2').style.transform = `rotate(18deg) translateX(${rate * 0.5}px)`;
            document.querySelector('.watermark-layer-3').style.transform = `rotate(-25deg) translateY(${rate * 0.3}px)`;
        });
    </script>
</body>
